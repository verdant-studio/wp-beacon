{
	"name": "wp-beacon",
	"version": "1.0.0",
	"description": "Synchronize your sites metrics to a no-code databases",
	"main": "tailwind.js",
	"scripts": {
		"watch": "wp-scripts start --webpack-src-dir=assets/blocks --webpack-copy-php",
		"build": "wp-scripts build --webpack-src-dir=assets/blocks --webpack-copy-php",
		"make-pot": "wp i18n make-pot . languages/beacon.pot",
		"make-json": "wp i18n make-json languages/ --no-purge"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/verdant-studio/wp-beacon.git"
	},
	"author": "Verdant Studio",
	"license": "GPL-2.0",
	"bugs": {
		"url": "https://github.com/verdant-studio/wp-beacon/issues"
	},
	"homepage": "https://github.com/verdant-studio/wp-beacon#readme",
	"devDependencies": {
		"@babel/preset-env": "^7.24.0",
		"@babel/preset-react": "^7.23.3",
		"@wordpress/eslint-plugin": "^17.10.0",
		"@wordpress/scripts": "^27.5.0",
		"babel-loader": "^9.1.3",
		"postcss-import": "^16.1.0",
		"webpack": "^5.90.3",
		"webpack-cli": "^5.1.4"
	},
	"dependencies": {
		"@tailwindcss/postcss": "^4.0.3",
		"@wordpress/api-fetch": "^7.1.0",
		"@wordpress/block-editor": "^13.1.0",
		"@wordpress/blocks": "^12.15.0",
		"@wordpress/components": "^28.1.0",
		"@wordpress/data": "^10.1.0",
		"@wordpress/element": "^5.15.0",
		"@wordpress/hooks": "^4.1.0",
		"@wordpress/i18n": "^5.1.0",
		"@wordpress/url": "^4.1.0",
		"isomorphic-fetch": "^3.0.0",
		"postcss": "^8.5.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-tooltip": "^5.25.0",
		"tailwindcss": "^4.0.3"
	}
}
